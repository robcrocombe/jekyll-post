{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": "airbnb-base",
  "rules": {
    "arrow-parens": 0,
    "comma-dangle": 0,
    "no-console": 0,
    "no-plusplus": 0,
    "no-restricted-syntax": 0,
    "no-underscore-dangle": 0,
    "no-unused-expressions": [2, {
      "allowTernary": true
    }],
    "no-use-before-define": 0,
    "max-len": 0,
    "strict": [2, "global"]
  }
}
